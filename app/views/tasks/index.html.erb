<h2>予定表</h2>

<div class="head">
<div class="head_left">
<%= link_to '予定の追加', new_task_path %>
</div>

<div class="head_right">
<%= link_to '月間表示', tasks_path(view: 'month') %>
<%= link_to 'ガントチャート表示', tasks_path(view: 'week') %>
</div>
</div>

<% if @view == 'week' %>
  <%= week_calendar do |date| %>
    <%= date.day %>
    <% @tasks_by_date[date].each do |task| %>
      <%= link_to task.name, task_path(task), class: "taskname" %>
    <% end %>
  <% end %>
<% else %>
  <%= month_calendar do |date| %>
    <%= date.day %>
    <% @tasks_by_date[date].each do |task| %>
      <%= link_to task.name, task_path(task), class: "taskname" %>
    <% end %>
  <% end %>
<% end %>